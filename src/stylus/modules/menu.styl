.menu
	centrarAb()
	color #fff
	cuadrado(100%)
	opacity 0
	pointer-events none
	position fixed
	text-align center
	overflow hidden
	// transitionBase()
	z-index 50
	
	&::before
		animation 0.8s ease-out reverse backwards paused
		gradient-horizontal($azul, $magenta, 0,100%)
		border-radius 100%
		content ''
		display block
		height 0
		overflow hidden
		padding-bottom 100%
		pointer-events none
		transform scale(0.04) translateY(99999rem)
		width @padding-bottom
		
	
	.container-menu
		backface-visibility hidden
		color #fff
		left 50%
		perspective 1000
		position fixed
		top @left
		transform translate3d(-50%, -50%, 0)
		
		ul
			list-style-type none
			padding 0
			
		
			li
				margin 2rem 0
				opacity 0
				text-align center
				transform translate3d(0, 36px, 0)
					
				
				a
					color #fff
					font-size 2.5rem
					
					&:hover
						// color $Amarillo
						text-decoration none
			
		.btn
			opacity 0
			&:active,		
			&:hover,		
			&:focus
				outline 0 !important		
				outline none !important
				

		.icon
			display block
			margin 0 auto
			
	&.active
		opacity 0.99
		pointer-events all
		
		&::before
			animation-name menu-animation
			animation-direction normal
			animation-fill-mode forwards
			animation-play-state running
			

		.container-menu
			li
				opacity 1
				transform translate3d(0,0,0)
				transition transform 0.2s ease-out, opacity 0.2s ease-out
				

				
				&:nth-child(1)
					transition-delay 0.75s
					
				&:nth-child(2)
					transition-delay 0.85s
					
				&:nth-child(3)
					transition-delay 0.95s
					
				&:nth-child(4)
					transition-delay 1.05s
					
			.btn
				opacity 0.99
				transition-delay 1.5s
.oferta
	&-desc
		background-color #f7f5f5
		height 100%
		max-height 0
		opacity 0
		overflow hidden
		padding 0 1rem
		position relative
		text-align left
		transitionBase()
		
		&.active
			margin-bottom 1rem
			max-height 50rem
			opacity 0.99
			padding 1rem
			
		a
			color $magenta
			
		p
			&:nth-of-type(1)
				margin-top 3rem
			
		.btn-close
			cuadrado(3rem !important)
			margin 0 !important
			padding 0
			position absolute
			right 0.5rem
			top 0.5rem
			
			.icon
				cuadrado(100%)
				display block
			
	&-header
		border-bottom 1px solid $gris
		clearfix()
		margin-bottom 1rem
		padding 0.5rem
		
		h3
			font-weight $light
			line-height 1.1
			text-align left
	
	&-item
		border-bottom 1px solid $gris
		padding 0 1rem
		
		h4
			color $gris
			font-size 2rem
			margin 1rem auto
			text-align left
			
		.btn
			display inline-block
			height auto
			margin 1rem auto
			width 12.4rem
		.vacante-num
			font-weight $bold
			padding 0.5rem
			

.navigator
	display none
	position fixed
	right 0.5rem
	top 50%
	transform translateY(-@top)
	transitionBase()
	width 3rem
	z-index 30
	

	ul
		list-style-type none
		padding 0
		text-align right
		

		li
			margin 1rem auto
			position relative
			
			&::before
				background-color $gris
				circ(1rem)
				content ''
				display inline-block
				left 0
				position relative
			
			&:hover
				a
					opacity 0.99
					transform translateX(0rem)
					text-decoration none
			
			a
				border-radius 3rem
				color white
				display inline-block
				gradient-horizontal($azul, $magenta, 0,100%)
				margin 0
				opacity 0
				overflow hidden
				padding 0 3rem
				position absolute
				right 0
				top -0.3rem
				transform translateX(0.5rem)
				transitionBase()
				width 17.5rem
				
				

			&:nth-of-type(1)
				a
					width 18rem
			&:nth-of-type(2)
				a
					width 22.7rem
			&:nth-of-type(3)
				a
					width 16.2rem
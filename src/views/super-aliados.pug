//-Layout Base
extends ../templates/base.pug

//-Etiqueta Title
block title
	-var titulo = "Interna";
	title Puntos Colombia

block content
		
	//Nuestro equipo
	section.container-fluid.container-equipo-interna
		div.row

			article.col-content.col-content-mid
				h1 Super Aliados

				p.text-justify Somos el programa de fidelización con el que tu marca podrá ser parte del día a día de los colombianos, dándote la inteligencia necesaria para entenderlos y permitiéndote crear para ellos, experiencias llenas de valor que generen lealtad y aumenten tus ventas. 

				p.text-justify ¿Quieres ser parte del ecosistema Puntos Colombia? Permítenos contactarte para que juntos empecemos a hacer cosas increíbles. 
 


				div.container-form
					form#aliados

						//Nombre
						div.form-group
							label(for="nombre") Nombre
							input(type="text", id="nombre", name="nombre")
						///-Nombre

						//Email
						div.form-group
							label(for="email") Email
							input(type="email", id="email", name="email")
						///-Email

						//Celular
						div.form-group
							label(for="celular") Celular
							input(type="number", min="0", id="celular", name="celular")
						///-Celular

						//comentario
						div.form-group
							label(for="comentario") Comentario
							textarea(name="comentario", id="comentario")
						///-comentario

						button.btn.btn-submit(type="submit") Enviar



		+image('aliados.png', 'Super Aliados')(class="img-container img-ofertas")

	
	///-Nuestro equipo

	

	



block Scripts
	script(type="text/javascript", src="js/pts-co.validate.js")
